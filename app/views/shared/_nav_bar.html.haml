.navbar.navbar-static-top
  .navbar-inner
    .container
      %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.brand{:href => root_path} photo_omni
      .nav-collapse
        / sign up/in/out
        %ul.nav.pull-right
          - if current_user
            %li.dropdown#account-menu
              %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#account-menu"}
                = image_tag current_user.avatar.url(:size_25_by_25).to_s
                &nbsp;
                = current_user.display_name
                %b.caret
              %ul.dropdown-menu
                %li= link_to "My Profile", edit_user_profile_path(current_user.id), id: "my_profile"
                %li= link_to "New Topic", new_topic_path, id: "new_topic"
                %li.divider
                %li= link_to "Sign out", sign_out_path, id: "sign_out"
          - else
            %li= link_to "Sign Up", new_user_path, id: "sign_up"
            %li.divider-vertical
            %li= link_to "Sign In", sign_in_path, id: "sign_in"

